@model Restoran.DAL.Entities.Narudzbina
@{
    ViewData["Title"] = "Brisanje narudžbine";
}

<h2>Brisanje narudžbine</h2>

<p>Da li ste sigurni da želite da obrišete narudžbinu za sto <b>@Model.BrojStola</b>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>