<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restoran.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restoran.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RestoranWEB</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- LEVO: funkcionalnosti po ulogama -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Osoblje" asp-action="Index">Osoblje restorana</a>
                        </li>

                        @if (User.IsInRole("Menadzer") || User.IsInRole("Konobar"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Rezervacija" asp-action="Index">Upravljaj rezervacijama</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Rezervacija" asp-action="Create">Dodaj rezervaciju</a>
                            </li>
                        }

                        @if (User.IsInRole("Kuvar"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Narudzbina" asp-action="Index">Narudžbine</a>
                            </li>
                        }

                        @if (User.IsInRole("Menadzer") || User.IsInRole("Konobar"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Narudzbina" asp-action="Index">Narudžbine</a>
                            </li>
                        }

                        @if (User.IsInRole("Menadzer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="ListaKorisnika">Lista korisnika</a>
                            </li>
                        }

                        @if (User.IsInRole("Gost"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Rezervacija" asp-action="Index">Moje rezervacije</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Rezervacija" asp-action="Create">Nova rezervacija</a>
                            </li>
                        }
                    </ul>

                    <!-- DESNO: user + odjava / login -->
                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Odjavi se</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Prijavi se</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Registruj se</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Restoran.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>