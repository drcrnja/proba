@model Restoran.DAL.Entities.Narudzbina
@{
    ViewData["Title"] = "Narudžbina";
}

<h2>Narudžbina</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <label>Broj stola</label>
        <input asp-for="BrojStola" class="form-control" value="@ViewBag.Sto" readonly />
    </div>

    <div class="form-group mb-2">
        <label>Proizvod</label>
        <select asp-for="Proizvod" class="form-control">
            <option value="Magnezijum">Magnezijum</option>
            <option value="Kisela voda">Kisela voda</option>
            <option value="SNS sendvič">SNS sendvič</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Pošalji narudžbinu</button>
</form>

<a asp-action="Index">Nazad na listu</a>