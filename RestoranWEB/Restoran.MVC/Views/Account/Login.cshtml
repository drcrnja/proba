@model Restoran.BLL.DTOs.LoginDto
@{
    ViewData["Title"] = "Prijava";
}

<h2>Prijava</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <label>Ime</label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Lozinka</label>
        <input asp-for="Lozinka" type="password" class="form-control" />
        <span asp-validation-for="Lozinka" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Uloguj se</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}