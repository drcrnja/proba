@using Restoran.DAL.Entities
@model Narudzbina
@{
    ViewData["Title"] = "Izmena narudžbine";
}

<h2>Izmena narudžbine</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BrojStola" />
    <input type="hidden" asp-for="CreatedBy" />

    <div class="form-group mb-2">
        <label>Broj stola</label>
        <input value="@Model.BrojStola" class="form-control" readonly />
    </div>

    <div class="form-group mb-2">
        <label>Proizvod</label>
        <select asp-for="Proizvod" class="form-control">
            <option value="Magnezijum">Magnezijum</option>
            <option value="Kisela voda">Kisela voda</option>
            <option value="SNS sendvič">SNS sendvič</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Sačuvaj izmenu</button>
</form>

<a asp-action="Index">Nazad</a>